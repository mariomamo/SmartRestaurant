<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryColor">

    <ImageView
        android:id="@+id/iv_piatto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/siciliana"/>

    <LinearLayout
        android:layout_toRightOf="@id/iv_piatto"
        android:layout_toLeftOf="@id/tv_prezzo"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primo"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_nome_piatto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siciliana"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senza veleno"
            android:textStyle="italic"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_prezzo"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10â‚¬"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@android:color/holo_green_dark"/>

</RelativeLayout>